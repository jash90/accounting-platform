# Server Configuration
PORT=3002
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/crm_platform

# Optional: GUS API (Polish Central Statistical Office)
GUS_API_KEY=your-gus-api-key-here
GUS_API_URL=https://wyszukiwarkaregon.stat.gov.pl/wsBIR/UslugaBIRzewnPubl.svc

# Optional: Redis Configuration (for caching)
